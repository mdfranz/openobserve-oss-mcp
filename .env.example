# OpenObserve MCP Server Configuration
# Copy this file to .env and fill in your actual values

# OpenObserve instance URL
ZO_BASE_URL=http://127.0.0.1:5080

# OpenObserve organization (usually 'default')
ZO_ORG=default

# OpenObserve access credentials
# Option 1: Base64-encoded email:password
# Generate with: echo -n "your-email@example.com:your-password" | base64
ZO_ACCESS_KEY=your-base64-encoded-credentials

# Option 2: For example scripts - plain credentials (less secure)
# Only use these for local development with the scripts in scripts/ directory
ZO_ROOT_USER_EMAIL=your-email@example.com
ZO_ROOT_USER_PASSWORD=your-password

# MCP Server Configuration (optional)
# These can also be passed as command-line arguments

# Log level for MCP server (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# MCP_LOG_LEVEL=INFO

# Transport mode (stdio or http)
# MCP_TRANSPORT=stdio

# HTTP server settings (only used when MCP_TRANSPORT=http)
# MCP_HOST=127.0.0.1
# MCP_PORT=8001

# Response limits
# MCP_MAX_ROWS=1000
# MCP_MAX_CHARS=50000

# MCP HTTP Transport Authentication (optional)
# Required when running MCP server with HTTP transport (unless using --auth-disabled)
# Generate a secure random token: openssl rand -hex 32
OPENOBSERVE_MCP_AUTH_TOKEN=your-secure-token-here

# OpenObserve timeout in seconds
# ZO_TIMEOUT=30

# Logging Configuration (optional)
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
MCP_LOG_LEVEL=INFO

# Connection timeout in seconds (optional)
# Default: 30
ZO_TIMEOUT=30

# Response size limits (optional)
MCP_MAX_ROWS=1000
MCP_MAX_CHARS=50000
